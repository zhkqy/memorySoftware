<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/transparent"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:background="@drawable/green_circle_drawable"
                android:textColor="@color/white"
                android:gravity="center"/>

        <View android:layout_width="15dp"
              android:layout_height="1dp"/>
        <TextView
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:textSize="30sp"
                android:layout_weight="1"
                android:background="@drawable/red_circle_drawable"
                android:textColor="@color/white"
                android:gravity="center"/>

        <View android:layout_width="15dp"
              android:layout_height="1dp"/>

        <TextView
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:background="@drawable/yellow_circle_drawable"
                android:textColor="@color/white"
                android:gravity="center"/>

    </LinearLayout>

    <TextView
            android:id="@+id/next_letter"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/red_line_drawable"
            android:text="下一组"
            android:textColor="@color/red_d1"

            android:textSize="20sp"
            android:gravity="center"/>


</LinearLayout>